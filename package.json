{
  "name": "dnd-terraform",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "format": "prettier --write .",
    "lint": "yarn eslint .",
    "lint:fix": "eslint . --fix",
    "build": "ts-node esbuild.ts",
    "build:local": "ts-node esbuild.ts --watch",
    "prepare": "husky",
    "localstack": "docker ps -aq --filter name=localstack_dnd-core | xargs docker stop && docker ps -aq --filter name=localstack_dnd-core | xargs docker rm && docker-compose up",
    "tf:init": "terraform -chdir=terraform init -input=false",
    "tf:init:local": "terraform -chdir=terraform init -input=false -reconfigure",
    "tf:plan": "terraform -chdir=terraform plan",
    "tf:plan:local": "terraform -chdir=terraform plan -var-file=environments/local/aws-common.tfvars -var-file=environments/local/environment.tfvars",
    "tf:plan:dev": "terraform -chdir=terraform plan -var-file=environments/dev/aws-common.tfvars -var-file=environments/dev/environment.tfvars",
    "tf:plan:staging": "terraform -chdir=terraform plan -var-file=environments/staging/aws-common.tfvars -var-file=environments/staging/environment.tfvars",
    "tf:plan:prod": "terraform -chdir=terraform plan -var-file=environments/prod/aws-common.tfvars -var-file=environments/prod/environment.tfvars",
    "tf:apply": "terraform -chdir=terraform apply",
    "tf:apply:local": "terraform -chdir=terraform apply -var-file=environments/local/aws-common.tfvars -var-file=environments/local/environment.tfvars -auto-approve",
    "tf:apply:dev": "terraform -chdir=terraform apply -var-file=environments/dev/aws-common.tfvars -var-file=environments/dev/environment.tfvars",
    "tf:apply:staging": "terraform -chdir=terraform apply -var-file=environments/staging/aws-common.tfvars -var-file=environments/staging/environment.tfvars",
    "tf:apply:prod": "terraform -chdir=terraform apply -var-file=environments/prod/aws-common.tfvars -var-file=environments/prod/environment.tfvars",
    "tf:destroy": "terraform -chdir=terraform destroy",
    "tf:destroy:local": "terraform -chdir=terraform destroy -var-file=environments/local/aws-common.tfvars -var-file=environments/local/environment.tfvars -auto-approve",
    "tf:destroy:dev": "terraform -chdir=terraform destroy -var-file=environments/dev/aws-common.tfvars -var-file=environments/dev/environment.tfvars",
    "tf:destroy:staging": "terraform -chdir=terraform destroy -var-file=environments/staging/aws-common.tfvars -var-file=environments/staging/environment.tfvars",
    "tf:destroy:prod": "terraform -chdir=terraform destroy -var-file=environments/prod/aws-common.tfvars -var-file=environments/prod/environment.tfvars",
    "tf:fmt": "terraform -chdir=terraform fmt -recursive",
    "tf:validate": "terraform -chdir=terraform validate",
    "tf:output": "terraform -chdir=terraform output",
    "tf:state:list": "terraform -chdir=terraform state list",
    "tf:state:show": "terraform -chdir=terraform state show",
    "tf:refresh": "terraform -chdir=terraform refresh",
    "deploy:local": "yarn tf:init:local && yarn tf:apply:local",
    "deploy:dev": "yarn build && yarn tf:init && yarn tf:plan:dev && yarn tf:apply:dev",
    "deploy:staging": "yarn build && yarn tf:init && yarn tf:plan:staging && yarn tf:apply:staging",
    "deploy:prod": "yarn build && yarn tf:init && yarn tf:plan:prod && yarn tf:apply:prod",
    "teardown:local": "yarn tf:destroy:local",
    "teardown:dev": "yarn tf:destroy:dev",
    "teardown:staging": "yarn tf:destroy:staging",
    "teardown:prod": "yarn tf:destroy:prod",
    "check:terraform": "yarn tf:fmt && yarn tf:validate",
    "workspace:new": "terraform -chdir=terraform workspace new",
    "workspace:select": "terraform -chdir=terraform workspace select",
    "workspace:list": "terraform -chdir=terraform workspace list",
    "generate:local": "drizzle-kit generate",
    "migrate:local": "drizzle-kit migrate",
    "seed:local": "ts-node scripts/seed.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@types/aws-lambda": "^8.10.156",
    "@types/dotenv": "^8.2.3",
    "@types/hapi__joi": "^17.1.15",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.15.6",
    "@types/source-map-support": "^0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "constructs": "^10.4.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.11",
    "esbuild-node-externals": "^1.18.0",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-glob": "^3.3.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.27.0",
    "@aws-lambda-powertools/metrics": "^2.27.0",
    "@aws-lambda-powertools/tracer": "^2.27.0",
    "@aws-sdk/client-s3": "^3.921.0",
    "@aws-sdk/s3-request-presigner": "^3.921.0",
    "@hapi/joi": "^17.1.1",
    "@middy/core": "^6.4.5",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "inversify": "^7.10.3",
    "openai": "^6.5.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0"
  }
}
